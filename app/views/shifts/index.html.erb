<h4>Shifts</h4>

<table id="tables" class="display" cellspacing="0" width="100%">
    <thead>
      <tr>
    <th>Name</th>
    <th>Time start</th>
    <th>Time stop</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.name %></td>
    <td><%= shift.time_start %></td>
    <td><%= shift.time_stop %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>

</table>

<br />

