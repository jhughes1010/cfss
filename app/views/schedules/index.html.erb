<h4>Employee Schedule</h4>

<table id="tables" class="display" cellspacing="0" width="100%">
    <thead>
  <tr>
    <th>Date</th>
    <th>Employee</th>
    <th>Grid</th>
    <th>Workweek</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
  <tbody>
<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.date %></td>
    <td><%= schedule.employee_id %></td>
    <td><%= schedule.grid_id %></td>
    <td><%= schedule.workweek %></td>
    <td><%= schedule.year %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

